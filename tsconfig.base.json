{
    "exclude": [
        "./**/node_modules",
        "./**/dist"
    ],
    "compilerOptions": {
        "alwaysStrict": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "declaration": true,
        "composite": true,
        "module": "commonjs",
        "target": "es2020",
        "allowJs": true,
        "moduleResolution": "node",
	"allowSyntheticDefaultImports": true
    },
    "references": [ { "path": "./common" } ],
    "buildOptions": {
      "incremental": true
    }
}
